@model AppLivraria_TsT.Models.DTO.Pedido_DTO

@{
    ViewBag.Title = "Pedidos Detalhes";
    Layout = "~/Views/Dashbord/Layout/_Layout.cshtml";
}

@using (Html.BeginForm("PedidoDetalhes", "Pedido"))
{
    <nav class="navbar navbar-expand-md bg-light">
        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <i class="fas fa-caret-right"></i>
                    <span>Detalhes Pedido</span>
                </li>
            </ul>            
        </div>
    </nav>

    <div class="container" id="cadastrarFunc">
        <form action="" method="POST">
            <div class="form-row">
                <div class="form-group col-md-2">
                    @Html.LabelFor(model => model.IdPedido, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.IdPedido, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    <div class="invalid-feedback"></div>
                </div>

                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-4" })
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    <div class="invalid-feedback"></div>
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.CPF, htmlAttributes: new { @class = "control-label col-md-3" })
                    @Html.EditorFor(model => model.CPF, new { htmlAttributes = new { @class = "form-control", @id = "CPF", @readonly = "readonly" } })
                    <div class="invalid-feedback"> </div>
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-3" })
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    <div class="invalid-feedback"></div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-2">
                    @Html.LabelFor(model => model.DtPedido, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.DtPedido, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    <div class="invalid-feedback"></div>
                </div>

                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.HoraPedido, htmlAttributes: new { @class = "control-label col-md-4" })
                    @Html.EditorFor(model => model.HoraPedido, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    <div class="invalid-feedback"></div>
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.ValorTotal, htmlAttributes: new { @class = "control-label col-md-3" })
                    @Html.EditorFor(model => model.ValorTotal, new { htmlAttributes = new { @class = "form-control", @id = "CPF", @readonly = "readonly" } })
                    <div class="invalid-feedback"> </div>
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(model => model.StatusPedido, htmlAttributes: new { @class = "control-label col-md-3" })
                    @Html.EditorFor(model => model.StatusPedido, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    <div class="invalid-feedback"></div>
                </div>
            </div>
            <button type="button" class="btn btn-primary" style="color:black">
                @Html.ActionLink("Voltar", "ListarTodosPedidos")
            </button>
            <button type="button" class="btn btn-primary" style="color:black">
                @Html.ActionLink("Itens do pedido", "ListarTodospedidoDetalhes", new { id = Model.IdPedido })
            </button>
        </form>
    </div>

}

