@model IEnumerable<AppLivraria_TsT.Models.DTO.Categoria_DTO>

@{
    ViewBag.Title = "ListarCategoria";
    Layout = "~/Views/Dashbord/Layout/_Layout.cshtml";
}

<section class="layout-content">

    <nav class="navbar navbar-expand-md bg-light">
        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <i class="fas fa-caret-right"></i>
                    <span>Lista de Categoria</span>
                </li>
            </ul>
            <a class="btn btn-outline-primary" href="/Categoria/CadCategoria" role="button">
                <span class="fas fa-user-plus" title="Cadastro" aria-hidden="true"></span>
                <span>Cadastrar Categoria</span>
            </a>
        </div>
    </nav>

    <div class="container">
        <div class="table-responsive">
            <table id="ListaFuncionario" class="table table-striped table-hover table-sm">
                <thead class="thead-dark">
                    <tr>
                        <th>Código</th>
                        <th>Nome</th>                        
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var funcionario in Model)
                    {

                        <tr>
                            <td>@funcionario.IdCat</td>
                            <td>@funcionario.Nome</td>                            

                            <td colspan="2">
                                @*<button type="button" class="btn btn-info btn-sm">
                                    @Html.ActionLink("Detalhes", "DetalhesFuncionario", new { id = funcionario.IdCat }, new { @style = "color:white" })
                                </button>*@
                                @*<a class="btn btn-info btn-sm" href="/Funcionario/FuncionariosPorId/@funcionario.IdFunc" role="button">
                                        <span class="fas fa-info-circle" title="Detalhes" aria-hidden="true"></span>
                                    </a>*@
                                @*<a class="btn btn-warning btn-sm" href="/Funcionario/EditarFuncionario/@funcionario.IdFunc" role="button">
                                        <span class="fas fa-edit" title="Atualizar" aria-hidden="true"></span>
                                    </a>*@
                                <button type="button" class="btn btn-warning btn-sm fas fa-edit" style="color:black">
                                    @Html.ActionLink("Editar", "EditarFuncionario", new { id = funcionario.IdCat }, new { @style = "color:white" })
                                </button>

                                @*<a class="btn btn-danger btn-sm da" href="/Funcionario/ExcluirFuncionario/@funcionario.IdFunc" role="button">
                                        <span class="fas fa-trash-alt " title="Excluir" aria-hidden="true"></span>
                                    </a>*@

                                <button type="button" class="btn btn-danger btn-sm da" style="color:black">
                                    @Html.ActionLink("Excluir", "ExcluirFuncionario", new { id = funcionario.IdCat },
                                    new { onclick = "return confirm('Deseja realmente Excluir o funcionário?');" })
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</section>

<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.5.2/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.bootstrap4.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.html5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.print.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.colVis.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.2.3/js/responsive.bootstrap4.min.js"></script>
<script>
    $(document).ready(function () {
        var table = $('#ListaFuncionario').DataTable({
            lengthChange: false,
            paging: false,
            ordering: false,
            info: false,
        });

        table.buttons().container()
            .appendTo('#ListaFuncionario_wrapper_wrapper .col-md-6:eq(0)');
    });
</script>
