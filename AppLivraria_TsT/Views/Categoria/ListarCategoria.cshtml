@model IEnumerable<AppLivraria_TsT.Models.DTO.Categoria_DTO>

@{
    ViewBag.Title = "Listar Categoria";
    Layout = "~/Views/Dashbord/Layout/_Layout.cshtml";
}

<section class="layout-content">

    <nav class="navbar navbar-expand-md bg-light">
        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <i class="fas fa-caret-right"></i>
                    <span>Lista de Categoria</span>
                </li>
            </ul>
            <a class="btn btn-outline-primary" href="/Categoria/CadCategoria" role="button">
                <span class="fas fa-user-plus" title="Cadastro" aria-hidden="true"></span>
                <span>Cadastrar Categoria</span>
            </a>
        </div>
    </nav>

    <div class="container">
        <div class="table-responsive">
            <table id="ListaCategoria" class="table table-striped table-hover table-sm">
                <thead class="thead-dark">
                    <tr>
                        <th>Código</th>
                        <th>Nome</th>                        
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var categoria in Model)
                    {

                        <tr>
                            <td>@categoria.IdCat</td>
                            <td>@categoria.Nome</td>                            

                            <td colspan="2">
                               
                                <button type="button" class="btn btn-warning btn-sm " style="color:black">
                                    @Html.ActionLink("Editar", "EditarCategoria", new { id = categoria.IdCat }, new { @style = "color:white" })
                                </button>

                                @*<a class="btn btn-danger btn-sm da" href="/Funcionario/ExcluirFuncionario/@funcionario.IdFunc" role="button">
                                        <span class="fas fa-trash-alt " title="Excluir" aria-hidden="true"></span>
                                    </a>*@

                                <button type="button" class="btn btn-danger btn-sm da" style="color:black">
                                    @Html.ActionLink("Excluir", "ExcluirCategoria", new { id = categoria.IdCat },
                                    new { onclick = "return confirm('Deseja realmente Excluir o funcionário?');" })
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</section>

